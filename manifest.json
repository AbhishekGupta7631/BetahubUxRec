
{
  "manifest_version": 3,
  "name": "D365 FO Training Recorder",
  "version": "1.0.0",
  "description": "Record and document D365 Finance & Operations workflows",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
  "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
          "<all_urls>"
      ],
      "js": [
        "libs/html2canvas.min.js",
        "content.js"
      ],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "D365 FO Training Recorder"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content.css",
        "libs/*",
        "export_viewer.html",
        "export_viewer.css",
        "export_viewer.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}